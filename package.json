{
  "name": "life-x-site",
  "version": "1.0.0",
  "description": "LIFE X 規格住宅加盟店専用サイト",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:css && vite build",
    "build:css": "npx tailwindcss -i ./src/input.css -o ./src/assets/tailwind.css --minify",
    "preview": "vite preview",
    "lint": "eslint --ext .js,.html .",
    "lint:fix": "eslint --ext .js,.html . --fix",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:report": "playwright show-report",
    "lighthouse": "lhci autorun",
    "perf": "node scripts/measure-performance.cjs"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "alpinejs": "^3.13.3",
    "dotenv": "^17.2.3",
    "jszip": "^3.10.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.56.1",
    "autoprefixer": "^10.4.21",
    "chrome-launcher": "^1.2.1",
    "eslint": "^8.0.0",
    "lighthouse": "^12.8.2",
    "postcss": "^8.5.6",
    "puppeteer": "^24.26.1",
    "tailwindcss": "^3.4.18",
    "vite": "^5.0.0"
  },
  "type": "module"
}
