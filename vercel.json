{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/admin",
      "destination": "/admin.html"
    },
    {
      "source": "/admin-login",
      "destination": "/admin-login.html"
    },
    {
      "source": "/admin-plans",
      "destination": "/admin-plans.html"
    },
    {
      "source": "/admin-rules",
      "destination": "/admin-rules.html"
    },
    {
      "source": "/admin-downloads",
      "destination": "/admin-downloads.html"
    },
    {
      "source": "/matrix",
      "destination": "/matrix.html"
    },
    {
      "source": "/plans",
      "destination": "/plans.html"
    },
    {
      "source": "/rules",
      "destination": "/rules.html"
    },
    {
      "source": "/downloads",
      "destination": "/downloads.html"
    },
    {
      "source": "/ai",
      "destination": "/ai.html"
    },
    {
      "source": "/design",
      "destination": "/design.html"
    },
    {
      "source": "/admin-profile",
      "destination": "/admin-profile.html"
    },
    {
      "source": "/admin-users",
      "destination": "/admin-users.html"
    },
    {
      "source": "/admin-notifications",
      "destination": "/admin-notifications.html"
    },
    {
      "source": "/admin-faq",
      "destination": "/admin-faq.html"
    },
    {
      "source": "/faq",
      "destination": "/faq.html"
    }
  ],
  "headers": [
    {
      "source": "/js/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/data/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=300, stale-while-revalidate=600"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "s-maxage=86400, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ]
}